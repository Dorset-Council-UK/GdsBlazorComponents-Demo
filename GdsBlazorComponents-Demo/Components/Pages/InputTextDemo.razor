@page "/input-text"

<PageTitle>Input Text - GDS Components Demo</PageTitle>

<GdsBackLink Href="/"></GdsBackLink>

<h1 class="govuk-heading-xl">Text Input</h1>

<p class="govuk-body">
    Use the text input component to let users enter text that's no longer than a single line.
</p>

<h2 class="govuk-heading-l">Example</h2>

<EditForm Model="@model">
    <DataAnnotationsValidator />
    
    <GdsFormGroup For="() => model.FullName">
        <GdsLabel Text="Your name" />
        <GdsInputText @bind-Value="model.FullName" class="govuk-input govuk-input--width-50" />
    </GdsFormGroup>

    <GdsFormGroup For="() => model.Email">
        <GdsLabel Text="Email address" />
        <GdsHint>We'll only use this to send you updates</GdsHint>
        <GdsInputText @bind-Value="model.Email" class="govuk-input govuk-input--width-50" />
    </GdsFormGroup>

    <GdsFormGroup For="() => model.PhoneNumber">
        <GdsLabel Text="Phone number" />
        <GdsHint>For international numbers include the country code</GdsHint>
        <GdsInputText @bind-Value="model.PhoneNumber" class="govuk-input govuk-input--width-10" />
    </GdsFormGroup>

    <GdsFormGroup For="() => model.Postcode">
        <GdsLabel Text="Postcode" />
        <GdsInputText @bind-Value="model.Postcode" class="govuk-input govuk-input--width-10" />
    </GdsFormGroup>

</EditForm>


@code {
    private InputTextModel model = new();

    public class InputTextModel
    {
        [Required(ErrorMessage = "Enter your full name")]
        public string FullName { get; set; } = "";

        [Required(ErrorMessage = "Enter your email address")]
        [EmailAddress(ErrorMessage = "Enter a valid email address")]
        public string Email { get; set; } = "";

        public string? PhoneNumber { get; set; }

        [Required(ErrorMessage = "Enter your postcode")]
        public string Postcode { get; set; } = "";
    }
}
